@{
    ViewData["Title"] = "Home Page";
}

<h2>Login</h2>


<div class="card mx-auto" style="width: 50%;">
    <div class="card-body">

        <form class="px-4 py-3">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" placeholder="email@exemplo.com">
            </div>
            <div class="form-group">
                <label for="senha">Password</label>
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>

        </form>
        <button onclick="mostrarToasts()" @*type="submit"*@ class="btn btn-primary" @*asp-controller="Login" asp-action="UsuarioLogado"*@>Login</button>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="CriarConta">Create Account</a>
        <a class="dropdown-item" href="#">Forget password?</a>
    </div>
</div>

